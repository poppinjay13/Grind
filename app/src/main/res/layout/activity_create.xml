<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:contentDescription="@string/back_button"
                android:padding="10dp"
                android:src="@drawable/back"/>
            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/event_title"
                android:textColorHint="@color/colorHints"
                android:inputType="textCapWords"
                android:maxLines="5"
                android:layout_marginTop="20dp"
                android:paddingBottom="10dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="30sp"
                android:maxLength="30"
                android:background="#00000000"
                android:importantForAutofill="no"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="3dp"
                android:background="@drawable/button_primary"
                android:layout_marginBottom="20dp"/>
            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:isScrollContainer="true"
                android:textColorHint="@color/colorHints"
                android:inputType="textCapSentences|textMultiLine"
                android:textSize="22sp"
                android:textStyle="normal"
                android:textColor="@color/colorBlack"
                android:gravity="top"
                android:hint="@string/event_description"
                android:background="#00000000"
                android:importantForAutofill="no"
                android:paddingBottom="100dp" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:weightSum="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/set_date"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight=".5"
                android:scaleType="centerInside"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/back_button"
                android:src="@drawable/calendar"/>
            <ImageView
                android:id="@+id/set_time"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight=".5"
                android:scaleType="centerInside"
                android:contentDescription="@string/back_button"
                android:src="@drawable/clock"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/date_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:baselineAligned="false"
            android:paddingBottom="5dp"
            android:weightSum="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:layout_margin="10dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitStart"
                    android:contentDescription="@string/back_button"
                    android:src="@drawable/start_date"/>
                <TextView
                    android:id="@+id/start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="15sp"
                    android:text="@string/start_date"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:layout_margin="10dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitStart"
                    android:contentDescription="@string/back_button"
                    android:src="@drawable/end_date"/>
                <TextView
                    android:id="@+id/end_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="15sp"
                    android:text="@string/end_date"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/time_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:baselineAligned="false"
            android:gravity="center_horizontal"
            android:weightSum="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:layout_margin="10dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitStart"
                    android:contentDescription="@string/back_button"
                    android:src="@drawable/start_time"/>
                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="15sp"
                    android:text="@string/start_time"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:layout_margin="10dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitStart"
                    android:contentDescription="@string/back_button"
                    android:src="@drawable/end_time"/>
                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="15sp"
                    android:text="@string/end_time"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/btnCreate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/create_event"
            android:background="@drawable/button"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>